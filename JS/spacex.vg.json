{
    "$schema" : "https://vega.github.io/schema/vega-lite/v5.json",
    "width" : 800, "height" : 400,
    "title": {
        "text": "SpaceX Payload Capacity over Time",
        "fontSize": 24,
        "anchor": "middle",
        "fontWeight": "bold",
        "color": "#dfdfdf"
      },
    "data": {"url": "https://raw.githubusercontent.com/KobeyRaff/FIT3179Vis2/FinalAssignment/Data/cleaned_dataset.csv"},
    "params": [
      {
        "name": "targetOrbit",
        "value": "All",
            "bind": {
                "input": "select",
                "options": [
                    "All",
                    "GEO",
                    "GTO",
                    "Heliocentric",
                    "L1",
                    "LEO",
                    "Lunar",
                    "MEO",
                    "SSO",
                    "Sub-orbital"
                ],
                "name": "Filter by Target Orbit:"
            }
      }
    ],
    "transform": [
        {
            "filter" : "datum.CleanMass > 0"
        },
        {
            "filter": "targetOrbit == 'All' || datum.Orbit == targetOrbit"
        }
    ],
    "mark": {"type": "circle", "tooltip": true, "size": 100, "opacity": 1},
    "encoding": {
      "x": {"field": "Date", "type": "temporal", "title": "Date",
      "axis" : {
        "title" : "Date",
        "labelAngle": 0,
        "labelFontSize": 14,
        "titleFontSize": 16
    
        }
    },
      "y": {"field": "CleanMass", "type": "quantitative", "title": "Payload Mass (kg)",
      "axis" : {
        "title" : "Payload Mass (kg)",
        "labelAngle": 0,
        "labelFontSize": 14,
        "titleFontSize": 16
    
            }
        },
      "color": {"field": "Orbit", "type": "nominal", "title": "Orbit", "legend": {
        "titleFontSize": 16,
        "labelFontSize": 14,
        "titleColor": "#dfdfdf",
        "labelColor": "#dfdfdf",
        "title": "Target Orbit"
        },
        "scale": {
            "scheme": "set3"
        }
    },
      "tooltip": [
        {"field": "Payload", "type": "nominal"}, 
        {"field": "Orbit", "type": "nominal"}, 
        {"field": "Customer", "type": "nominal"},
        {"field": "CleanMass", "type": "quantitative", "title": "Payload Mass (kg)"},
        {"field": "Date", "type": "temporal", "title": "Date"}
    ]
    },
    "selection": {
        "zoom": {
          "type": "interval",
          "bind": "scales",
          "on": "[mousedown[!event.shiftKey], mouseup] > mousemove",
          "translate": "[mousedown[!event.shiftKey], mouseup] > mousemove!"
        },
        "select": {
          "type": "interval",
          "on": "[mousedown[event.shiftKey], mouseup] > mousemove",
          "translate": "[mousedown[event.shiftKey], mouseup] > mousemove!"
        }
      },
    "config": {
        "background": "#1b1b1b",
        "axis": {
            "labelColor": "#adadad",
            "titleColor": "#adadad",
            "gridColor": "#636363"
        }
    }
  }