{
    "$schema" : "https://vega.github.io/schema/vega-lite/v5.json",
    "width" : 800, "height" : 400,
    "title": {
        "text": "Launches Over Time",
        "fontSize": 24,
        "anchor": "middle",
        "fontWeight": "bold",
        "color": "#dfdfdf"
      },
    "data" : { "url" : "https://raw.githubusercontent.com/KobeyRaff/FIT3179Vis2/main/processed_data.csv" },
    "transform": [
        {
           "aggregate": [
              {
                 "op": "count",
                 "field": "Year",
                 "as": "launches"
              }
           ],
           "groupby" : ["Year"]
        }

    ],
    "mark" : "line",
    "encoding" : {
        "x" : { 
            "field" : "Year", 
            "type" : "temporal", 
            "timeUnit" : "year",
            "axis" : {
                "title" : "Year",
                "labelAngle": 0,
                "labelFontSize": 14,
                "titleFontSize": 16
            }
        },
        "y" : { 
            "field" : "launches", 
            "type" : "quantitative",
            "axis" : {
                "title" : "Number of Launches",
                "labelAngle": 0,
                "labelFontSize": 14,
                "titleFontSize": 16
            
            }
    
        },
        "color" : {
            "value" : "#ffa321"
        },
        "strokeWidth": {
            "value": 5
          },
          "tooltip" : [
            {"field" : "Year", "type" : "temporal", "timeUnit" : "year", "title" : "Year"},
            {"field" : "launches", "type" : "quantitative", "title" : "Number of Launches"}
          ]
    },
    "selection": {
        "zoom": {
          "type": "interval",
          "bind": "scales",
          "on": "[mousedown[!event.shiftKey], mouseup] > mousemove",
          "translate": "[mousedown[!event.shiftKey], mouseup] > mousemove!"
        },
        "select": {
          "type": "interval",
          "on": "[mousedown[event.shiftKey], mouseup] > mousemove",
          "translate": "[mousedown[event.shiftKey], mouseup] > mousemove!"
        }
      },
    
    "config": {
        "background" : "#1b1b1b",
        "axis": {
            "labelColor": "#dfdfdf",
            "titleColor": "#dfdfdf"
        }
      }

}