{
    "$schema" : "https://vega.github.io/schema/vega-lite/v5.json",
    "width" : 1000, "height" : 800,
    "title": {
        "text": "Major Space Launches by Country",
        "fontSize": 24,
        "anchor": "middle",
        "fontWeight": "bold",
        "color": "#dfdfdf"
      },
    "data" : { "url" : "https://raw.githubusercontent.com/KobeyRaff/FIT3179Vis2/main/processed_data.csv" },
    
    "transform": [
        { "filter": 
            {"field": "Country", "oneOf": ["China", "Russia", "USA", "India", "Japan", "France"]}
        },
        {
           "aggregate": [
              {
                 "op": "count",
                 "field": "Year",
                 "as": "Launches"
              }
           ],
            "groupby": [
                  "Country",
                    "Year"
              ]
        }

    ],
    "mark" : "area",
    "encoding" : {
        "x" : { 
            "field" : "Year", 
            "type" : "temporal", 
            "timeUnit" : "year",
            "axis": {
                "labelAngle": 0,
                "labelFontSize": 14,
                "titleFontSize": 16,
                "title": "Year",
                "titleColor": "#dfdfdf",
                "labelColor": "#dfdfdf"
              }
        },
        "y" : { 
            "field" : "Launches", 
            "type" : "quantitative",
            "axis" : {
                "labelAngle": 0,
                "labelFontSize": 14,
                "titleFontSize": 16,
                "title": "Number of Launches",
                "titleColor": "#dfdfdf",
                "labelColor": "#dfdfdf"
              }
    
        },
        "color" : { 
            "field" : "Country", 
            "type" : "nominal",
            "scale": {
                "range": ["#ffa321", "#fe6833", "#e20051", "#bb006b", "#7f0080", "#0b008a"]
              },
              "legend": {
                "titleFontSize": 16,
                "labelFontSize": 14,
                "gradientLength": 300,
                "titleColor": "#dfdfdf",
                "labelColor": "#dfdfdf"
              }
        }, 
        "tooltip" : [
            { "field" : "Country", "type" : "nominal" },
            { "field" : "Year", "type" : "temporal", "timeUnit" : "year", "title" : "Year" },
            { "field" : "Launches", "type" : "quantitative" }
        ]
        
    },
    "config": {
        "background" : "#1b1b1b",
        "axis": {
            "labelColor": "#adadad",
            "titleColor": "#adadad",
            "gridColor": "#636363"
        }
      }

}